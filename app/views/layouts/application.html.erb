<!DOCTYPE html>
<html>
  <head>
    <title>Rails Chat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_path, class: "navbar-brand" do %>
            Chat
          <% end %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <%= yield :right_nav %>

              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.username %> <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li>Settings</li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to 'Log out', log_out_path %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to 'Sign up', sign_up_path %></li>
              <li><%= link_to 'Log in', log_in_path %></li>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div class="fluid-container" style="margin-top: 70px">
      <div class="row">
        <div class="col-sm-2" style="position: fixed; top: 70px; left: 0;">
          <% if current_user %>
            <h5>Chatrooms</h5>
            <ul>
              <% current_user.chats.each do |chat| %>
                <li><%= link_to chat.name, chat, data: {behavior: "chat-link", chat_id: chat.id} %></li>
              <% end %>
            </ul>

            <h5>Users</h5>
            <ul>
              <% (User.all - [current_user]).each do |user| %>
                <li><%= link_to user.username %></li>
              <% end %>
            </ul>
          <% end %>
        </div>

        <div class="col-sm-10 col-sm-offset-2">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>


